      "id": "img_banner1",
      "label": "Image",
      "info": "697 x 392px recommended"
    },	
    {
      "type": "text",
      "id": "title_banner1",
      "label": "Title",
      "default": "FOR MEN"
    },
	{
      "type": "text",
      "id": "subtitle_banner1",
      "label": "Sub Title",
      "default": "10 item"
    },
	{
      "type": "url",
      "id": "url_banner1",
      "label": "URL",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Setting banner 2"
    },
    {
      "type": "image_picker",
      "id": "img_banner2",
      "label": "Image",
      "info": "697 x 392px recommended"
    },
    {
      "type": "text",
      "id": "title_banner2",
      "label": "Title",
      "default": "FOR WOMEN"
    },
	{
      "type": "text",
      "id": "subtitle_banner2",
      "label": "Sub Title",
      "default": "11 item"
    },
	{
      "type": "url",
      "id": "url_banner2",
      "label": "URL",
