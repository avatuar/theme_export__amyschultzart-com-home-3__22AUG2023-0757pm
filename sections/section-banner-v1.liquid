<div data-section-id="{{ section.id }}" data-section-type="section-banner-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v1">
    <div class="container container-v1">
      <div class="row">        
        <div class="col-md-6 banner1">
          <div class="box-banner">
            <div class="box-img">
              <a href="{{section.settings.url_banner1}}" class="img-banner">
                <img data-src=" {% if section.settings.img_banner1 != blank %}{{section.settings.img_banner1 | img_url:'master'}} {% else %}//via.placeholder.com/697x392 {% endif %}" class="lazyload w-100 img-fluid" alt="_img">
              </a>
            </div>
            <div class="info-banner">
              <div class="info">    
                {% if section.settings.title_banner1 != blank %}
                <h3 class="title"><a href="{{section.settings.url_banner1}}">{{section.settings.title_banner1}}</a></h3>
                {% endif %} 
                {% if section.settings.subtitle_banner1 != blank %}
                <div class="count_item">{{section.settings.subtitle_banner1}}</div>
                {% endif %} 
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 banner2">
          <div class="box-banner">
            <div class="box-img">
              <a href="{{section.settings.url_banner2}}" class="img-banner">
                <img data-src="{% if section.settings.img_banner2 != blank %} {{section.settings.img_banner2 | img_url:'master'}} {% else %} //via.placeholder.com/697x392 {% endif %}" class="lazyload img-fluid w-100" alt="_img">
              </a>
            </div>
            <div class="info-banner">
              <div class="info">  
                {% if section.settings.title_banner2 != blank %}
                <h3 class="title"><a href="{{section.settings.url_banner2}}">{{section.settings.title_banner2}}</a></h3>
                {% endif %}  
                {% if section.settings.subtitle_banner1 != blank %}
                <div class="count_item">{{section.settings.subtitle_banner1}}</div>
                {% endif %} 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


