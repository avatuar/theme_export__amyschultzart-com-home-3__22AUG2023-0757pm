<div data-section-id="{{ section.id }}" data-section-type="section-banner-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v3">
    <div class="container container-v6">
      <div class="row">      
        <div class="col-lg-4 col-md-4 banner1">
          <div class="banner-ver">
            <div class="banner-item">
              <div class="box-image d-block">
                {% if section.settings.banner_img1 != blank %}
                <img data-src="{{section.settings.banner_img1 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                {% else %}
                <img data-src="//via.placeholder.com/594x457" class="lazyload img-fluid w-100" alt="_img">
                {% endif %}
              </div>
              <div class="content">                
                {% if section.settings.title_banner1 != blank %}
                <h3 class="title-banner">{{section.settings.title_banner1}}</h3>
                {% endif %}
                {% if section.settings.sub_title1 != blank %}
                <div class="sub-title">{{section.settings.sub_title1}}</div>
                {% endif %}
                {% if section.settings.button_banner1 != blank %}
                <a href="{{section.settings.url_button_banner1}}" class="button">{{section.settings.button_banner1}}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>    
        <div class="col-lg-4 col-md-4 banner2">
          <div class="banner-ver">
            <div class="banner-item">
              <div class="box-image d-block">
                {% if section.settings.banner_img2 != blank %}
                <img data-src="{{section.settings.banner_img2 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                {% else %}
                <img data-src="//via.placeholder.com/594x457" class="lazyload img-fluid w-100" alt="_img">
                {% endif %}
              </div>
              <div class="content">
                {% if section.settings.title_banner2 != blank %}
                <h3 class="title-banner">{{section.settings.title_banner2}}</h3>
                {% endif %}
                {% if section.settings.sub_title2 != blank %}
                <div class="sub-title">{{section.settings.sub_title2}}</div>
                {% endif %}
                {% if section.settings.button_banner2 != blank %}
                <a href="{{section.settings.url_button_banner2}}" class="button">{{section.settings.button_banner2}}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>    
        <div class="col-lg-4 col-md-4 banner3">
          <div class="banner-ver">
            <div class="banner-item">
              <div class="box-image d-block">
                {% if section.settings.banner_img3 != blank %}
