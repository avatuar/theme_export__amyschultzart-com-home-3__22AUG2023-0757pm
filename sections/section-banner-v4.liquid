<div data-section-id="{{ section.id }}" data-section-type="section-banner-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v4">
    <div class="container container-v2">
      <div class="row banner-wrapper">      
        <div class="col-lg-7 col-md-6 col-12 col-sm-12 banner-pd">
          <div class="banner-ver banner1">
            <div class="banner-item">
              <div class="content">                
                {% if section.settings.title_banner1 != blank %}
                <h3 class="title-banner">{{section.settings.title_banner1}}</h3>
                {% endif %}
                {% if section.settings.sub_title1 != blank %}
                <div class="sub-title">{{section.settings.sub_title1}}</div>
                {% endif %}
              </div>
              
              <a href="{{section.settings.url_button_banner1}}" class="box-image d-block">
                {% if section.settings.banner_img1 != blank %}
                <img data-src="{{section.settings.banner_img1 | img_url: 'master'}}" class="lazyload img-fluid" alt="_img">
                {% else %}
                <img data-src="//via.placeholder.com/766x813" class="lazyload img-fluid" alt="_img">
                {% endif %}
              </a>
              
            </div>
          </div>
        </div>    
        <div class="col-lg-5 col-md-6 col-12 col-sm-12 banner-pd">
          <div class="banner-ver banner2">
            <div class="banner-item">
              
              <a href="{{section.settings.url_button_banner2}}" class="box-img d-block">
                {% if section.settings.banner_img2 != blank %}
                <img data-src="{{section.settings.banner_img2 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                {% else %}
                <img data-src="//via.placeholder.com/535x710" class="lazyload img-fluid w-100" alt="_img">
                {% endif %}
              </a>   
              <div class="content">
                {% if section.settings.title_banner2 != blank %}
                <h3 class="title-banner">{{section.settings.title_banner2}}</h3>
                {% endif %}
                {% if section.settings.sub_title2 != blank %}
                <div class="sub-title">{{section.settings.sub_title2}}</div>
                {% endif %}                
              </div>
              
            </div>
          </div>
        </div>    
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "BANNER V4",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "header",
      "content": "Settings Banner 1"
    },
	{
      "type": "image_picker",
      "id": "banner_img1",
      "label": "Image",
      "info": "766 x 813px recommended"
    },
	{
      "type": "text",
      "id": "title_banner1",
      "label": "Title",
      "default": "Classic Wear"
    },
    {
      "type": "text",
      "id": "sub_title1",
      "label": "Sub Title",
      "default": "We have a collection of the most luxurious models of Turkish clothing that suits all <br> tastes and looks"
    },  
    {
      "type": "url",
      "id": "url_button_banner1",
      "label": "URL Banner 1 ",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Settings Banner 2"
    },    
	{
      "type": "image_picker",
      "id": "banner_img2",
      "label": "Image",
      "info": "535 x 710px recommended"
    },
    {
      "type": "text",
      "id": "title_banner2",
      "label": "Title",
      "default": "Summer Collection"
    },
	{
      "type": "text",
      "id": "sub_title2",
      "label": "Sub Title",
      "default": "Though the fashion industry has moved beyond Phoebe Philo's minimalist approach to style, there are a few key codes that really stuck. Monochromatic dressing in neutral tones is as popular as ever, while clean, pared-back silhouettes still epitomize chicness"
    },    
    {
      "type": "url",
      "id": "url_button_banner2",
      "label": "URL Banner 2 ",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "BANNER V4",
      "category": "HOME"
    }
  ]
}
{% endschema %}

