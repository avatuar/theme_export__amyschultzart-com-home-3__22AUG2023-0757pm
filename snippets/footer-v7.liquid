{% if section.settings.select_fts == "footer_v7" %}
{% if template contains 'index' %}
<footer class="footer_v7" style="background-color : {{section.settings.ft_home_bg_footer}}">
  <div class="top-footer">
    <div class="container container-v1 ">    
      <div class="row">
        <div class="col-lg-3 col-md-6 col-menu">
          <div class="info_footer">
            <div class="title_footer">          
              <h4>{{settings.titlecolum_fv7_1}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv7_1].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-lg-3 col-md-6 col-menu">
          <div class="info_footer">
            <div class="title_footer">          
              <h4>{{settings.titlecolum_fv7_2}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv7_2].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-lg-3 col-md-6 col-menu">
          <div class="info_footer info_contact">
            <div class="title_footer ">          
              <h4>{{settings.titlecolum_fv7_3}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv7_3].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="info_footer info_contact">
            <div class="phone-icon">
              <div class="icon">
                {{settings.iconsvg_fv7_1}}
              </div>
              <div class="text">
                <h4>{{settings.titlephone_fv7_1}}</h4>
                <div class="sub">{{settings.phone_fv7_1}}</div>
              </div>
            </div>
            
            <div class="content_footer">
              {% if settings.content_colum_fv7_1 != blank %}
              {{settings.content_colum_fv7_1}}
              {% else %}
              <ul class="list-unstyled mb-0">
                <li class="address"><strong>Address :</strong><span> 121 King Street, Collins Melbourne <br>West Victoria 8007, Australia</span></li>
                <li class="clock"><strong>Open Hours :</strong><br><span>Monday – Saturday: 8:00 am – 4:00pm<br>Sunday: Close</span></li>
              </ul>
              {% endif %}
            </div>
            
            <div class="list-icon">
              {% if settings.icon_sc_fv7_1 !=blank %}
              <a href="{{settings.url_sc_fv7_1}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv7_1}}"></i></a>
              {% endif %}
              {% if settings.icon_sc_fv7_2 !=blank %}
              <a href="{{settings.url_sc_fv7_2}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv7_2}}"></i></a>
              {% endif %}
              {% if settings.icon_sc_fv7_3 !=blank %}
              <a href="{{settings.url_sc_fv7_3}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv7_3}}"></i></a>
              {% endif %}
              {% if settings.icon_sc_fv7_4 !=blank %}
              <a href="{{settings.url_sc_fv7_4}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv7_4}}"></i></a>
              {% endif %}         
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% if settings.enable_fv7_bottom %}
  <div class="copyright">
    <div class="container container-v1">
      <div class="row align-items-center">
        <div class="col-lg-6 col-md-6 {% if settings.enable_rtl_mode %} text-md-right {% else %} text-md-left{% endif %} text-center">
          {% if settings.fv7_bottom_payment_img != blank %}
          <img src="{{settings.fv7_bottom_payment_img | img_url:'master'}}"  alt="">
          {% else %}
          <img src="//via.placeholder.com/310x32"  alt="">
          {% endif %}
        </div>
        <div class="col-lg-6 col-md-6 {% if settings.enable_rtl_mode %}text-md-left {% else %}text-md-right {% endif %}text-center">
          {% if settings.fv7_bottom_copyright != blank %}
          <p class="text-copyright mb-0">{{settings.fv7_bottom_copyright}}</p>
          {% else %}
          <div class="text-copyright mb-0"><p class="mb-0">© Copyright 2022 | <a href="http://themeocean.net/" rel="nofollow" target="_blank" class="underline_hover"> OAL </a> By <a href="http://themeocean.net/" rel="nofollow" target="_blank" class="underline_hover"> ThemeOcean.</a><a href="https://www.shopify.com/?ref=shopifycenter" rel="nofollow" target="_blank" class=""> Powered by Shopify.</a></p>
          </div> 
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}

</footer>
<style>
  .footer_v7 .top-footer .title_footer h4{
    color : {{section.settings.ft_home_color_heading}};
  }
  .footer_v7 .top-footer .col-menu ul li a{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v7 .top-footer .info_footer .content_footer{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v7 .copyright p{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v7 .copyright p a{
    color : {{section.settings.ft_home_color_text}};
  }
</style>
{% endif %}
{% endif %}

